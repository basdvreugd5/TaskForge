{
    "preset": "per",
    "rules": {
        "no_superfluous_phpdoc_tags": true,
        "phpdoc_trim": true,
        "phpdoc_trim_consecutive_blank_line_separation": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "single_quote": true,
        "array_syntax": {
            "syntax": "short"
        }
    }
}